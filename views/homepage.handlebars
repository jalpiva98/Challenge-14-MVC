<main class="container mt-5">


  {{#if logged_in}}
    <!-- If the user is logged in, do not show the registration and login forms -->
    <h1 class="mb-4 text-white font-bold">Happy to see u again!</h1>


  {{else}}
<section class="flex flex-wrap">
<!-- Left: Login Form -->
<section class="w-full md:w-1/2 p-4 h-3/4">

  <h1 class="w-1/2 px-4 py-2 mb-2 bg-teal-900 text-white font-bold rounded-md shadow-[3px_3px_0px_3px_#73ac31,10px_10px_0px_3px_#bdff73]">LOG IN WITH YOUR USERNAME</h1>
  <form class="hearthstone-login-form mt-10 h-[35vh] hearthstone-signup-form bg-emerald-300 text-teal-900 rounded-lg border-teal-900 border-2 flex flex-col justify-between">

    <div>
      <div class="mb-3 flex flex-col items-center"> <!-- Center inputs vertically and horizontally -->
        <label for="username" class="block text-white font-bold">USERNAME</label>
        <input
          type="text"
          class="w-5/6 px-3 py-2  rounded-md border-teal-900 border-2 focus:outline-none focus:border-yellow-500"
          id="username-tech-login"
          placeholder="Username"
        />
      </div>
      <div class="mb-3 flex flex-col items-center"> <!-- Center inputs vertically and horizontally -->
        <label for="password" class="block text-white font-bold ">PASSWORD</label>
        <input
          type="password"
          class="w-5/6 px-3 py-2  rounded-md border-teal-900 border-2 focus:outline-none focus:border-yellow-500"
          id="password-tech-login"
          placeholder="Log your password"
        />
      </div>
    </div>

    <div class="flex justify-center ">
      <button type="submit" class="w-5/6 px-4 py-2 mb-4 bg-teal-900 text-white border-white border-2 rounded-md hover:bg-yellow-600">Log In!</button>
    </div>
  </form>
</section>

      <!-- Right: Signup Form -->
<section class="w-full md:w-1/2 p-4 h-3/4">

  <h1 class="w-1/2 px-4 py-2 mb-2 bg-teal-900 text-white font-bold rounded-md shadow-[3px_3px_0px_3px_#73ac31,10px_10px_0px_3px_#bdff73]">JOIN THE COMMUNITY</h1>
  <form id="signup-form" class="h-[35vh] mt-10 hearthstone-signup-form bg-emerald-300 text-teal-900 rounded-lg border-teal-900 border-2 flex flex-col justify-between"> <!-- Add flex and justify-between here -->

    <div>
      <div class="mb-3 flex flex-col items-center"> <!-- Center inputs vertically and horizontally -->
        <label for="username" class="block text-white font-bold">USERNAME</label>
        <input
          type="text"
          class="w-5/6 px-3 py-2 border-teal-900 border-2 rounded-md focus:outline-none focus:border-yellow-500"
          id="username"
          placeholder="Create a username"
        />
      </div>
      <div class="mb-3 flex flex-col items-center"> <!-- Center inputs vertically and horizontally -->
        <label for="email" class="block text-white font-bold">EMAIL</label>
        <input
          type="email"
          class="w-5/6 px-3 py-2 border-teal-900 border-2 rounded-md focus:outline-none focus:border-yellow-500"
          id="email"
          placeholder="Write your email"
        />
      </div>
      <div class="mb-3 flex flex-col items-center"> <!-- Center inputs vertically and horizontally -->
        <label for="password" class="block text-white font-bold">PASSWORD</label>
        <input
          type="password"
          class="w-5/6 px-3 py-2 border-teal-900 border-2 rounded-md focus:outline-none focus:border-yellow-500"
          id="password"
          placeholder="Use a safe password"
        />
      </div>
    </div>
    <div class="flex justify-center mb-4"> <!-- Add margin-bottom here -->
      <button type="submit" class="w-5/6 px-4 py-2 bg-teal-900 text-white border-white border-2 rounded-md hover:bg-yellow-600">Join! ðŸ¤²</button>
    </div>
  </form>
</section>

</section>

  <div class="flex items-center mb-0"> <!-- Create blank space -->
            <div class="w-full h-12 bg-transparent"></div>
  </div>

{{/if}}
  <div class="flex items-center mb-0"> <!-- Create blank space -->
            <div class="w-full h-13 bg-transparent"></div>
  </div>
<!-- Posts Section Below -->
<section class="text-center mx-auto mb-20">
  <h1 class="block mx-auto mb-4 h-10 bg-teal-900 rounded-md text-white py-2"> Tech posts by the community!</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
 {{#each posts}}
<div class="w-full p-4  shadow-[5px_5px_rgba(0,_98,_90,_0.4),_10px_10px_rgba(0,_98,_90,_0.3),_15px_15px_rgba(0,_98,_90,_0.2),_20px_20px_rgba(0,_98,_90,_0.1),_25px_25px_rgba(0,_98,_90,_0.05)]">
  <div class="shadow-md rounded-md p-4">
    <h2 class="text-lg font-semibold mb-2">
      <a href="/post/{{id}}" class="text-gray-900">{{title}}</a>
    </h2>
    <p class="text-gray-600">By {{User.username}} on {{format_date createdAt}}</p>
  </div>
</div>
    {{/each}}
  {{map}}
  </div>
</section>
</main>
